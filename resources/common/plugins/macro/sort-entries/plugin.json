{
    "name": "sort-entries",
    "version": 8,
    "type": "macro",
    "displayedName": {
        "en": "Reorder entries",
        "zh": "重新排序条目",
        "ja": "エントリを並び替える"
    },
    "author": "sdercolin",
    "email": "sder.colin@gmail.com",
    "description": {
        "en": "Reorder all entries by entry name, sample name, start time, or tag",
        "zh": "根据条目名，采样名或标签来重新排序所有条目",
        "ja": "エントリ名、サンプル名、開始位置、またはタグによってエントリを並び替えます"
    },
    "website": "https://github.com/sdercolin/vlabeler/tree/main/resources/common/plugins/macro/sort-entries",
    "supportedLabelFileExtension": "*",
    "parameters": {
        "list": [
            {
                "type": "boolean",
                "name": "descending",
                "label": {
                    "en": "Descending order",
                    "zh": "降序排列",
                    "ja": "降順"
                },
                "defaultValue": false
            },
            {
                "type": "boolean",
                "name": "useTag",
                "label": {
                    "en": "Sort by tag",
                    "zh": "根据标签排序",
                    "ja": "タグで並び替える"
                },
                "defaultValue": false
            },
            {
                "type": "boolean",
                "name": "prioritizeTag",
                "label": {
                    "en": "Sort by tag first",
                    "zh": "首先根据标签排序",
                    "ja": "タグを優先して並び替える"
                },
                "enableIf": "useTag",
                "defaultValue": true
            },
            {
                "type":"enum",
                "name":"priority",
                "label": {
                    "en":"Sort entries by",
                    "zh": "",
                    "ja": ""
                },
                "defaultValue": "sampleStart",
                "options": [
                    "sampleStart",
                    "sampleName",
                    "name"
                ],
                "optionDisplayedNames": [
                    {
                        "en": "Sample -> Start time",
                        "zh": "",
                        "jp": "サンプル名と開始位置で並び変える"
                    },
                    {
                        "en": "Sample -> Entry name",
                        "zh": "",
                        "jp": "サンプル名とエントリ名で並び変える"
                    },
                    {
                        "en": "Entry name only",
                        "zh": "",
                        "jp": "エントリ名のみで並び替える"
                    }
                ]
            }
        ]
    },
    "scriptFiles": [
        "sort-entries.js"
    ]
}
